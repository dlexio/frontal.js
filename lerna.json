{
  "npmClient": "yarn",
  "version": "independent",
  "conventionalCommits": true,
  "useWorkspaces": true,
  "command": {
    "version": {
      "exact": true
    },
    "publish": {
      "npmClient": "npm",
      "allowBranch": [
        "main",
        "canary"
      ],
      "registry": "https://registry.npmjs.org/"
    }
  },
  "packages": [
    "packages/*"
  ],
  "changelog": {
    "labels": {
      "feat": "New Feature",
      "fix": "Bug Fix",
      "docs": "Documentation",
      "perf": "Performance",
      "refactor": "Code Refactoring"
    }
  }
}
